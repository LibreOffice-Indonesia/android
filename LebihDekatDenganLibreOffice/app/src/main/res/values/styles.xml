<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="paddingEnd">@dimen/tab_padding_end</item>
        <item name="paddingStart">@dimen/tab_padding_start</item>
        <item name="tabBackground">@android:color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/secondary_text</item>
    </style>

    <style name="MaterialProgressBarDefault">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="backgroundColour">@color/colorPrimaryLight</item>
        <item name="duration">1500</item>
        <item name="progressColour">@color/colorPrimaryDark</item>
        <item name="repeatMode">reverse</item>
    </style>

</resources>
