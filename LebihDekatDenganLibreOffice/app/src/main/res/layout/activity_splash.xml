<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libreoffice.id.activities.SplashActivity">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="@dimen/splash_screen_logo_size"
        android:layout_height="@dimen/splash_screen_logo_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:srcCompat="@drawable/logo" />

    <com.libreoffice.id.customs.MaterialProgressBar
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/splash_screen_logo_size"
        android:indeterminate="true"
        app:backgroundColour="@color/colorPrimaryLight"
        app:duration="1500"
        app:progressColour="@color/colorPrimaryDark"
        app:repeatMode="reverse" />

</FrameLayout>
